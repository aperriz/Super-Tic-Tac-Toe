<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="borderPane" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
   <center>
      <AnchorPane fx:id="centerPane" maxHeight="1.7976931348623157E308">
         <padding>
            <Insets right="10.0" top="10.0" />
         </padding>
         <BorderPane.margin>
            <Insets top="10.0" />
         </BorderPane.margin>
      </AnchorPane>
   </center>
   <left>
      <VBox fillWidth="false" maxHeight="1.7976931348623157E308" maxWidth="-Infinity" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Turn" textAlignment="CENTER" wrappingWidth="100.123046875">
               <font>
                  <Font size="36.0" />
               </font>
               <VBox.margin>
                  <Insets right="10.0" />
               </VBox.margin>
            </Text>
            <Text fx:id="turnCounter" layoutX="20.0" layoutY="59.0" strokeType="OUTSIDE" strokeWidth="0.0" text="1" textAlignment="CENTER" wrappingWidth="100.123046875">
               <font>
                  <Font size="44.0" />
               </font>
            </Text>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Move" textAlignment="CENTER" wrappingWidth="100.123046875">
               <font>
                  <Font size="36.0" />
               </font>
            </Text>
            <ImageView fx:id="turnImage" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </ImageView>
            <Button fx:id="resetButton" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#resetGame" prefWidth="100.0" text="Reset">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#save" prefHeight="41.0" prefWidth="100.0" text="Save">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#load" prefHeight="39.0" prefWidth="100.0" text="Load">
               <VBox.margin>
                  <Insets top="100.0" />
               </VBox.margin>
            </Button>
         </children>
         <padding>
            <Insets left="10.0" top="10.0" />
         </padding>
         <opaqueInsets>
            <Insets right="10.0" />
         </opaqueInsets>
      </VBox>
   </left>
   <padding>
      <Insets bottom="50.0" right="50.0" top="25.0" />
   </padding>
</BorderPane>
